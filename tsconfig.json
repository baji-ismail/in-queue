{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./src",
    "moduleResolution": "node",
    "lib": [
        "esnext",
        "esnext.asynciterable",
        "dom", 
        "es2015"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
